@model List<About>

<section id="about" class="about section">
    @foreach (var item in Model)
    {
        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Hakkımda</h2>
            <p>@item.AboutHead</p>
        </div>

        <!-- End Section Title -->

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="@item.ImageUrl" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 content">
                    <h2>@item.Title</h2>
                    @*<p class="fst-italic py-3">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore
                        magna aliqua.
                    </p>*@
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Linkedin:</strong> <span>@item.Linkedin</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.Number</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.City</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        @item.AboutText
                    </p>
                </div>
            </div>
        </div>
    }
</section>