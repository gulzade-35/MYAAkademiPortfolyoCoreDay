@model PortfolioCoreDay.Entities.About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımda Sayfası Düzenleme İşlemleri</h1>

<form method="post">
    <input type="hidden" asp-for="AboutId" />
    <label>Ad Soyad</label>
    <input type="text" asp-for="FullName" class="form-control" style="border:1px solid black"/>
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="AboutHead" class="form-control" style="border:1px solid black" />
    <br />
    <label>Ünvan</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid black" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="AboutText" class="form-control" style="border:1px solid black" />
    <br />
    <label>Email</label>
    <input type="text" asp-for="Email" class="form-control" style="border:1px solid black" />
    <br />
    <label>Telefon</label>
    <input type="text" asp-for="Number" class="form-control" style="border:1px solid black" />
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" style="border:1px solid black" />
    <br />
    <label>Linkedin</label>
    <input type="text" asp-for="Linkedin" class="form-control" style="border:1px solid black" />
    <br />
    <label>Görsel</label>
    <input type="text" asp-for="ImageUrl" class="form-control" style="border:1px solid black" />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>